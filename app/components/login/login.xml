<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <GridLayout>
    <ScrollView>
      <StackLayout>
        <Image src="~/res/login_logo.png" cssClass="loginLogo" stretch="fill" />

        <Label text="Login" cssClass="header"/>
        
        <TextField text="{{ username }}" hint="username" />
        <TextField text="{{ password }}" secure="true" hint="password" />

        <Button text="LOGIN" tap="{{ login }}" cssClass="primaryActionButton" />
        <Button text="SIGN UP" tap="{{ signUp }}" cssClass="secondaryActionButton" />
      </StackLayout>
    </ScrollView>

    <ActivityIndicator busy="{{ isLoading }}" />
  </GridLayout>
</Page>