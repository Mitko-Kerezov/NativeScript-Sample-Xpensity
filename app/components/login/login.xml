<Page xmlns="http://www.nativescript.org/tns.xsd" 
      loaded="pageLoaded"
      navigatedTo="navigatedTo">
  <Page.optionsMenu>
    <MenuItem text="SIGN UP" tap="signUpMenuItemTap" android.position="actionBar" />
  </Page.optionsMenu>
  <GridLayout>
    <ScrollView>
      <StackLayout>
        <GridLayout cssClass="firstTextFieldContainer">
          <TextField text="{{ username }}" autocorrect="false" autocapitalizationType="none" hint="email" keyboardType="email" cssClass="firstTextField" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>
        <GridLayout cssClass="textFieldContainer">
          <TextField text="{{ password }}" secure="true" hint="password" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>

        <Button text="LOGIN" tap="{{ login }}" cssClass="primaryButton" />
      </StackLayout>
    </ScrollView>

    <ActivityIndicator busy="{{ isLoading }}" />
  </GridLayout>
</Page>