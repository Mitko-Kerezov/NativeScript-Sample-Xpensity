<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:g="components/grid-view/grid-view"
      loaded="pageLoaded">
  <StackLayout>
    <Label text="MY REPORTS" cssClass="header" />
    <ScrollView>
      <g:GridView items="{{ reports }}" gridColumns="2" cssClass="reportsGrid">
        <g:GridView.itemTemplate>
          <Border borderWidth="2" borderColor="#DEDDDD" cssClass="tile">
            <StackLayout orientation="vertical">
              <Image src="~/res/approved-gray.png" cssClass="icon" stretch="fill" style="horizontal-align: right;" />
              <PieChart items="{{ Expenses }}" cssClass="pieChart" />
              <Label text="{{ Title }}" cssClass="itemHeader" />
              <Label text="{{ CreatedOn }}" cssClass="itemSubHeader" />
            </StackLayout>
          </Border>
        </g:GridView.itemTemplate>
      </g:GridView>
    </ScrollView>
  </StackLayout>
</Page>