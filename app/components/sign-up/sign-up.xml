<Page xmlns="http://www.nativescript.org/tns.xsd" 
      loaded="pageLoaded"
      navigatedTo="navigatedTo">
  <GridLayout>
    <ScrollView>
      <StackLayout>
        <GridLayout cssClass="firstTextFieldContainer">
          <TextField text="{{ name }}" hint="name" cssClass="firstTextField" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>
        <GridLayout cssClass="textFieldContainer">
          <TextField text="{{ email }}" keyboardType="email" autocorrect="false" autocapitalizationType="none" hint="email" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>
        <GridLayout cssClass="textFieldContainer">
          <TextField text="{{ password }}" secure="true" hint="password" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>
        <GridLayout cssClass="textFieldContainer">
          <TextField text="{{ confirmPassword }}" secure="true" hint="confirm password" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>

        <Button text="{{ resources.signUp }}" tap="{{ signUp }}" cssClass="primaryButton" />

      </StackLayout>
    </ScrollView>

    <ActivityIndicator busy="{{ isLoading }}" />
  </GridLayout>
</Page>