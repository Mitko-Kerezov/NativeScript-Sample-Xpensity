<Page xmlns="http://www.nativescript.org/tns.xsd"
      loaded="pageLoaded"
      navigatingTo="navigatedTo">
  <Page.actionBar>
    <ActionBar>
      <ActionItem text="{{ resources.done }}" tap="doneMenuItemTap" android.position="actionBar" />
    </ActionBar>
  </Page.actionBar>
  <GridLayout>
    <ScrollView>
      <StackLayout>
        <GridLayout cssClass="firstTextFieldContainer">
          <TextField text="{{ item.Title }}" hint="Title" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>
        <GridLayout cssClass="textFieldContainer">
          <TextField text="{{ item.Location  }}" hint="Location" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>
        <GridLayout cssClass="textFieldContainer">
          <TextField text="{{ item.Cost  }}" hint="Cost" keyboardType="number" />
          <Border cssClass="pickerBorder" visibility="{{ iosVisibility }}" />
        </GridLayout>

        <StackLayout cssClass="pickerContainer" tap="datePickerTap" >
          <Label text="Date" cssClass="pickerLabel" />
          <GridLayout columns="*, auto" cssClass="innerContainer">
            <Label text="{{ item.Date | formatDate }}" cssClass="pickerValue" />
            <Image col="1" src="res://ic_arrow_drop_down" cssClass="pickerIcon" stretch="none" />
          </GridLayout>
          <Border cssClass="pickerBorder" />
        </StackLayout>

        <StackLayout cssClass="pickerContainer" tap="categoryPickerTap" >
          <Label text="Category" cssClass="pickerLabel" />
          <GridLayout columns="*, auto" cssClass="innerContainer" bindingContext="{{ category }}">
            <Label text="{{ Title }}" cssClass="pickerValue" />
            <Image col="1" src="res://ic_arrow_drop_down" cssClass="pickerIcon" stretch="none" />
          </GridLayout>
          <Border cssClass="pickerBorder" />
        </StackLayout>
        
        <GridLayout cssClass="textViewContainer">
          <TextView text="{{ item.Notes }}" hint="Notes" />
        </GridLayout>

        <Button text="{{ resources.deleteExpense }}" tap="deleteExpenseButtonTap" color="#FF0000" cssClass="secondaryButton" visibility="{{ editVisibility }}" />
      </StackLayout>
    </ScrollView>

    <ActivityIndicator busy="{{ isLoading }}" />
  </GridLayout>
</Page>