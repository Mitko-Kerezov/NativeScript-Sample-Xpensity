<Page xmlns="http://www.nativescript.org/tns.xsd"
      loaded="pageLoaded"
      navigatedTo="navigatedTo" >
  <Page.optionsMenu>
    <MenuItem text="DONE" tap="doneMenuItemTap" android.position="actionBar" />
  </Page.optionsMenu>
  <GridLayout>
    <ScrollView>
      <StackLayout>
        <TextField text="{{ expense.Title }}" hint="Title" cssClass="firstTextField" />
        <TextField text="{{ expense.Cost  }}" hint="Cost" />

        <StackLayout cssClass="pickerContainer" tap="datePickerTap">
          <Label text="Date" cssClass="pickerLabel" />
          <GridLayout columns="*, auto">
            <Label text="{{ expense.Date }}" cssClass="pickerValue" />
            <Image col="1" src="res://ic_arrow_drop_down" cssClass="pickerIcon" stretch="none" />
          </GridLayout>
          <Border cssClass="pickerBorder" />
        </StackLayout>

        <StackLayout cssClass="pickerContainer" tap="categoryPickerTap">
          <Label text="Category" cssClass="pickerLabel" />
          <GridLayout columns="*, auto">
            <Label text="{{ expense.Category }}" cssClass="pickerValue" />
            <Image col="1" src="res://ic_arrow_drop_down" cssClass="pickerIcon" stretch="none" />
          </GridLayout>
          <Border cssClass="pickerBorder" />
        </StackLayout>
       
        <TextView text="{{ expense.Notes }}" hint="Notes" />

        <Button text="DELETE EXPENSE" tap="deleteExpenseButtonTap" color="#FF0000" cssClass="secondaryButton" style.visibility="{{ editVisibility }}" />
      </StackLayout>
    </ScrollView>

    <ActivityIndicator busy="{{ isLoading }}" />
  </GridLayout>
</Page>