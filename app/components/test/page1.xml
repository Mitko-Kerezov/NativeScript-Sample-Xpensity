<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:g="components/grid-view/grid-view"
      loaded="pageLoaded"
      >
  <Page.actionBar>
    <ActionBar>
      <ActionItem text="DONE" tap="doneMenuItemTap" android.position="actionBar" />
      <ActionItem text="{{ resources.reports }}" android.position="actionBar" />
    </ActionBar>
  </Page.actionBar>
  <TabView>
    <TabView.items>
      <TabViewItem title="{{ resources.reports }}" iconSource="res://ic_reports" >
        <TabViewItem.view>
          <StackLayout>
            <Label text="{{ resources.reports }}" />
            <Label text="Page 1" />
          </StackLayout>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="settings" >
        <TabViewItem.view>
          <StackLayout>
            <Label text="Page 2" />
          </StackLayout>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>