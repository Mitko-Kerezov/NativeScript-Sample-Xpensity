<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:table="table"
      xmlns:vs="shared/validation-summary"
      navigatedTo="onNavigatedTo" >
  <Page.actionBar>
    <ActionBar>
      <NavigationButton icon="res://ic_arrow_back" link="#back" />
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="auto, *">
    <vs:validation-summary />
    <ScrollView row="1">
      <StackLayout>
        <table:Table cssClass="table-margin">
          <TextField text="{{ email }}" hint="email" autocapitalizationType="none" cssClass="text-field" />
        </table:Table>
        <Button text="Recover" tap="{{ recoverPassword }}" cssClass="primary-button"/>
      </StackLayout>
    </ScrollView>
    <ActivityIndicator rowSpan="2" busy="{{ isLoading }}" />
  </GridLayout>
</Page>