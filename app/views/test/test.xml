<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:table="table"
      navigatedTo="onNavigatedTo">
  <Page.actionBar>
    <ActionBar title="{{ isAdd ? 'Add' : 'Edit' }}">
      <ActionBar.actionItems>
        <ActionItem text="Test" ios.position="right" tap="{{ test }}" />
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="auto, auto">
    <Label text="{{ isAdd ? 'Add' : 'Edit' }}" />
    <Button row="1" text="Test" tap="{{ test }}" />
  </GridLayout>
</Page>