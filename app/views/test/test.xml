<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:chart="nativescript-telerik-ui/chart"
      navigatingTo="onNavigatingTo" >
  <chart:RadPieChart id="pieChart" palettes="{{ pieSource | paletteConverter }}" width="300" height="300">
    <chart:RadPieChart.series>
      <chart:PieSeries items="{{ pieSource }}" valueProperty="Amount" />
    </chart:RadPieChart.series>
  </chart:RadPieChart>
</Page>