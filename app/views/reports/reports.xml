<TabViewItem xmlns:g="grid-view" xmlns:chart="nativescript-telerik-ui/chart" id="ReportsTabItem" ios:title="My reports" iconSource="res://ic_reports" >
  <TabViewItem.view>
    <GridLayout rows="auto, *" bindingContext="{{ reportsViewModel }}" >
      <android>
        <Label text="MY REPORTS" cssClass="header" visibility="{{ androidVisibility }}" />
      </android>
      
      <ScrollView row="1" >
        <g:GridView gridColumns="2" items="{{ reports }}" cssClass="reports-grid" >
          <g:GridView.itemTemplate>
            <StackLayout orientation="vertical" link="viewReport" linkContext="{{ $value }}" cssClass="tile">
              <Label text="{{ report.Status | reportStatusConverter }}" cssClass="status-label" />
              <chart:RadPieChart cssClass="categories-chart">
                <chart:PieChart.series>
                  <chart:PieSeries items="{{ expensesByCategory}}" valueProperty="Percent">
                  </chart:PieSeries>
                </chart:PieChart.series>
              </chart:RadPieChart>
              <Label text="{{ report.Title }}" cssClass="item-header" />
              <Label text="{{ report.Date | formatDate }}" cssClass="item-content" />
            </StackLayout>
          </g:GridView.itemTemplate>
        </g:GridView>
      </ScrollView>

      <android>
        <AbsoluteLayout rowSpan="2" cssClass="fab-container" >
          <Image src="res://fab" link="editReport" stretch="none" cssClass="fab" />
        </AbsoluteLayout>
      </android>

      <ActivityIndicator rowSpan="2" busy="{{ isLoading }}" />
    </GridLayout>
  </TabViewItem.view>
</TabViewItem>