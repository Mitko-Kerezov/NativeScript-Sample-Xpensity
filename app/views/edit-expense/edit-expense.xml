<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:table="table"
      xmlns:dp="date-picker"
      xmlns:ddl="drop-down-list"
      xmlns:vs="shared/validation-summary"
      navigatingTo="onNavigatingTo">
  <Page.actionBar>
    <ActionBar title="{{ isAdd ? 'Add Expense' : 'Edit Expense' }}">
      <NavigationButton icon="res://ic_arrow_back" link="#back" />
      <ActionBar.actionItems>
        <ActionItem icon="res://ic_photo" ios.position="right" tap="onTakePhotoTap" />
        <ActionItem text="Done" ios.position="right" tap="onDoneTap" />
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="auto, *">
    <vs:validation-summary />
    <ScrollView row="1">
      <StackLayout>
        <table:Table>
          <TextField text="{{ item.Title }}" hint="Title" />
          <TextField text="{{ item.Location  }}" hint="Location" />
          <TextField text="{{ item.Cost }}" hint="Cost" keyboardType="number" />
          <ddl:DropDownList header="Category" items="{{ categories }}" displayName="Title" valueName="Id" selectedValue="{{ item.Category }}" />
          <dp:DatePicker header="Date" selectedDate="{{ item.Date }}" />
          <TextView text="{{ item.Notes }}" hint="Notes" />
        </table:Table>

        <Image visibility="{{ picture | visibilityConverter }}" row="9" src="{{ picture }}" cssClass="image" />
        <Button visibility="{{ picture | visibilityConverter }}" row="10" text="Remove" tap="{{ removePicture }}" cssClass="remove-button" />

        <Button text="Delete Expense" tap="{{ delete }}" visibility="{{ canDelete | visibilityConverter }}" cssClass="delete-button" />
      </StackLayout>
    </ScrollView>

    <ActivityIndicator rowSpan="2" busy="{{ isLoading }}" />
  </GridLayout>
</Page>