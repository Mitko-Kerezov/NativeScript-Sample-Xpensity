<StackLayout tap="{{ onDatePickerTap }}" cssClass="picker-container" >
  <GridLayout columns="auto, *, auto" cssClass="picker-inner-container" >
    <Label text="{{ header }}" cssClass="picker-header" />
    <Label col="1" text="{{ selectedDate | formatDate }}" cssClass="picker-value" />
    <Image col="2" src="res://ic_arrow-right" cssClass="picker-icon" />
  </GridLayout>
</StackLayout>
