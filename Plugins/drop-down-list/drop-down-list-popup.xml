<Page xmlns="http://www.nativescript.org/tns.xsd"
     navigatedTo="onNavigatedTo" >
  <Page.actionBar>
    <ActionBar>
      <ActionBar.titleView>
        <GridLayout></GridLayout>
      </ActionBar.titleView>
      <NavigationButton icon="res://ic_arrow_back" link="#back" />
      <ActionBar.actionItems>
        <ActionItem text="Done" tap="onDoneTap" ios.position="right" />
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="auto, auto, *">
    <Button text="{{ clearButtonText }}" tap="{{ clear }}" visibility="{{ showClearButton | visibilityConverter }}" cssClass="clear-button" />
    <GridLayout row="1" visibility="{{ showClearButton | visibilityConverter }}" cssClass="separator" />
    <ListView row="2" items="{{ items }}" itemTap="onItemTap" >
      <ListView.itemTemplate>
        <GridLayout cssClass="{{ isSelected ? 'item-container-selected' : 'item-container' }}"> 
          <Label text="{{ value }}" />
        </GridLayout>
      </ListView.itemTemplate>
    </ListView>

    <ActivityIndicator rowSpan="3" busy="{{ isLoading }}" />
  </GridLayout>
</Page>